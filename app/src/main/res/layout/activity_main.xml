<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.wadee.nots.MainActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sendTextBtn"
        android:text="Send With Bluetooth"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/openColorActivity"
        android:text="Write on screen"
        android:onClick="buttonClicked"
        android:layout_below="@+id/sendTextBtn"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notificationModeBtn"
        android:text="Open Notification Mode"
        android:onClick="buttonClicked"
        android:layout_below="@+id/sendTextBtn"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/musicModeBtn"
        android:text="Open Music Mode"
        android:onClick="buttonClicked"
        android:layout_below="@+id/sendTextBtn"
        />



</LinearLayout>
